<!DOCTYPE html>
<html>
    <head>
        <title>Dashboard</title>
        <link rel="stylesheet" type="text/css" href="/goals.css">
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    </head>
    <body>
        <h1>Dashboard</h1>
        <nav class="navbar">
            <a href="/">Home</a>
            <a href="workout">Workouts</a>
            <a href="health/nutrition">Health</a>
            <a href="goals">Goals</a>
            <a href="auth/logout">Logout</a>
        </nav>

        <table>
            <thead>
                <tr>
                    <th>Workout Type</th>
                    <th>Duration (minutes)</th>
                    <th>Intensity</th>
                    <th>Calories burned</th>
                    <th>Date</th>
                    <th>Exercise name</th>
                    <th>Sets</th>
                    <th>Reps</th>
                    <th>Weight (kg)</th>
                </tr>
            </thead>
            <tbody>
                <% if (workouts.length > 0) { %>
                    <% let lastThreeWorkouts = workouts.slice(-3); %>
                    <% lastThreeWorkouts.forEach(workout => { %>
                        <tr>
                            <td><%= workout.workout_type %></td>
                            <td><%= workout.duration_minutes %></td>
                            <td><%= workout.intensity %></td>
                            <td><%= workout.calories_burned %></td>
                            <td><%= new Date(workout.workout_date).toLocaleDateString() %></td>
                            <td><%= workout.exercise_name %></td>
                            <td><%= workout.sets %></td>
                            <td><%= workout.reps %></td>
                            <td><%= workout.weight_kg %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4">No workouts found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <table>
            <thead>
                <tr>
                    <th>Goal Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% if (goals.length > 0) { %>
                    <% let lastThreeGoals = goals.slice(-3) %>
                    <% lastThreeGoals.forEach(goal => { %>
                        <tr>
                            <td><%= goal.goal_type %></td>
                            <td><%= new Date(goal.start_date).toLocaleDateString() %></td>
                            <td><%= new Date(goal.end_date).toLocaleDateString() %></td>
                            <td><%= goal.status %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4">No goals found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div class="chart-container" style="position: relative; height:40vh; width:80vw; margin-left: 5vw; margin-top: 5vh">
            <canvas id="goalsChart" width="100" height="100"></canvas>
        </div>

        <script>
            // Data for Goals Pie Chart
            const goalsData = <%- JSON.stringify(goals) %>;
    
            // Categorize goals by status
            const goalCounts = {
                completed: goalsData.filter(g => g.status === 'Completed').length,
                inProgress: goalsData.filter(g => g.status === 'In Progress').length,
                failed: goalsData.filter(g => g.status === 'Failed').length,
            };

            console.log(goalCounts);
    
            new Chart(document.getElementById('goalsChart'), {
                type: 'pie',
                data: {
                    labels: ['Completed', 'In Progress', 'Failed'],
                    datasets: [{
                        label: 'Goals Status',
                        data: [goalCounts.completed, goalCounts.inProgress, goalCounts.failed],
                        backgroundColor: ['#4CAF50', '#FFC107', '#F44336']
                    }]
                }
            });
        </script>

    </body>
</html>